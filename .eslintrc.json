{
    "extends": "airbnb",
    "rules": {
        "comma-dangle": 0,
        "import/no-extraneous-dependencies": 0,
        "import/no-unresolved": 0,
        "prefer-arrow-callback": 0,
        "no-use-before-define": 0
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "settings": {
        "import/resolve": {
            "moduleDirectory": [
                "jspm_packages",
                "node_modules",
                "."
            ]
        }
            },
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ]
}